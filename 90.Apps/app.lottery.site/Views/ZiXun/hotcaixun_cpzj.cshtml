    //        var category = $(this).attr("category");
    //        $(this).addClass("on");
    //        $(this).siblings().removeClass("on");
    //        location.search = "pageNo=" + 0 + "&pageSize=" + 25 + "&category=" + category + "&r=" + Math.random().toFixed(5);
    //    });
    function getAlldata(pageNo, pageSize) {
        location.search = "pageNo=" + pageNo + "&pageSize=" + pageSize;
    }
</script>
