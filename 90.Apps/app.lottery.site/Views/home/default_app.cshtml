    <script type="text/javascript">
        (function () {
            var params = getQueryParams(window.location.search);
            var mobi = params['mobi'];
            var pc = params['pc'];
            var ua = navigator.userAgent, platform = navigator.platform;
            var os;

            /*客户端下载*/
            if (platform.indexOf("iPhone") > -1 || platform.indexOf("iPad") > -1 || platform.indexOf("iPod") > -1) {
                os = "ios";
            } else if (ua.indexOf("Android") > -1) {
                os = "android";
            }
            /*跳转到m.500.com*/
            $(".guide_link").bind('click', function () {
                setCookie("pctomb", "1");
                window.location.href = "/";
            })

            /*跳转到3g.500.com*/
            $(".guide_3g").bind('click', function () {
                setCookie("pctomb", "1");
                window.location.href = mobi;
            })

            /*跳转到pc*/
            $(".guide_pc").bind('click', function () {
                setCookie("pctomb", "2");
                window.location.href = pc;
            })

            $("#app_down_link").bind('click', function () {
                window.location.href = mobi + "home/download_app";
            })
        })();

        function getQueryParams(qs) {
            qs = qs.split("+").join(" ");
            var params = {}, tokens, re = /[?&]?([^=]+)=([^&]*)/g;
            while (tokens = re.exec(qs)) {
                params[decodeURIComponent(tokens[1])] = decodeURIComponent(tokens[2]);
            }
            return params;
        }

        //设置cookie
    function setCookie(name, value) {
        var strsec = 1 * 6 * 60 * 60 * 1000;
        var exp = new Date();
        exp.setTime(exp.getTime() + strsec * 1);
        document.cookie = name + "=" + escape(value) + ";expires=" + exp.toGMTString() + "path=/;";
    }
    </script>
