@{
    var awardList = ViewBag.AwardList as List<GameBiz.Core.WinNumber_QueryInfo>;
}
<div class="hd">
    <h2 class="title">最新开奖</h2>
</div>
<div id="kaijiang" class="kj_box" style=" height:400px;">
    <ul class="tabs-nav ont_tab" id="index_awardlist_tab">
        <li ttl="0"  class="cur" onclick="swAwardList(0);">足彩</li>
        <li ttl="1" onclick="swAwardList(1);">数字</li>
        <li ttl="2" onclick="swAwardList(2);">高频</li>
    </ul>
    <div id="scroll_con">
        <div style="margin-top: 0px;" class="tabs-cnt scroll_box">
            @{foreach (var item in awardList.Where(i => i.GameCode.ToLower() == "ctzq"))
              {
                <dl class="kj_sort">
                    <dt><a href="/lottery/ctzq/@item.GameType" target="_blank">@SiteConvert.GameName(item.GameCode, item.GameType)@(item.GameType.ToLower() == "t14c" ? "(任九)" : string.Empty)</a>
                        第<span class="yellow">@item.IssuseNumber</span>期 </dt>
                    <dd class="kj_num eng">
                        @{var red = "";
                          var blue = "";
                          if (item.WinNumber.Contains('|'))
                          {
                              red = item.WinNumber.Split('|')[0];
                              blue = item.WinNumber.Split('|')[1];
                          }
                          else
                          {
                              red = item.WinNumber;
                          }
                          if (red.Contains(','))
                          {
                              foreach (var redI in red.Split(','))
                              {
                            <b class="red">@redI</b>
                              }
                          }
                          if (blue.Contains(','))
                          {
                              foreach (var blueI in blue.Split(','))
                              {
                            <b class="blue">@blueI</b>
                              }
                          }
                        }
                    </dd>
                    <dd class="kj_link">
                        <a href="/buy/toto/@item.GameType.ToLower()" target="_blank">我要投注</a> <span class="gray">| </span><a href="/hemai/index/ctzq/@item.GameType.ToLower()" target="_blank">参与合买 </a>
                    </dd>
                </dl>
              }
            }
        </div>
        <div style="display: none;" class="tabs-cnt scroll_box">
            @{foreach (var item in awardList.Where(i => SiteString.gameList("szc").Contains(i.GameCode.ToLower())))
              {
