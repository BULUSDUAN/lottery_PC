<script type="text/javascript">
    (function (B, H, s, f, tp) {
        if (B.mozilla) {
            f -= 5
        }
        if (B.webkit || B.opera) {
            f -= 5
        }
        var ul, li, dl, up, dn, e;
        $(function () {
            ul = $('#kaijiang');
            li = $('li', ul);
            dl = $('#scroll_con .scroll_box');
            up = $('#scroll_up');
            dn = $('#scroll_down');
            c = dl.eq(2);
            up.hover(slowUp, clear);
            dn.hover(slowDn, clear);
            up.mousedown(fastUp);
            dn.mousedown(fastDn);
            up.mouseup(slowUp);
            dn.mouseup(slowDn)
        });
        function clear() {
            clearTimeout(e)
        }
        function set(v, h) {
            clear();
            h = H - c.height() - 14;
            if ((tp < 0 || v > 0) && (tp > h || v < 0)) {
                tp -= v;
                if (tp <= 0) {
                    if (tp < h) {
                        tp = h;
                    }
                }
                else {
                    tp = 0
                }
                c.css('margin-top', tp);
                e = setTimeout(function () {
                    set(v)
                }, 10)
            }
        }
        function slowDn() {
            set(s)
        }
        function fastDn() {
            set(f)
        }
        function slowUp() {
            set(-s)
        }
        function fastUp() {
            set(-f)
        }
    })($.browser, 235, 1, 10, 0);
    function swAwardList(i) {
        $("#index_awardlist_tab li:eq(" + i + ")").attr("class", "cur").siblings("li").attr("class", "");
        $("#scroll_con .scroll_box:eq(" + i + ")").show().addClass("now").siblings().hide().removeClass("now");
    }
</script>
