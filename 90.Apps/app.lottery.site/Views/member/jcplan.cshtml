@using app.lottery.site.Models;
@{
   ViewBag.Title = "安全首页 - 用户中心 - 体育彩票 | 福利彩票 | 中国体育彩票 - " + SiteString.getHZSiteName(Request);
   ViewBag.keywords = "安全首页, 用户中心, 体育彩票, 福利彩票, 中国体育彩票, " + SiteString.getHZSiteName(Request);
   CurrentUserInfo user = ViewBag.CurrentUser;
}
@section css{
    @ViewHelpers.css("mycenter.css")
    @ViewHelpers.css("jcplan.css")
}
<div class="crumb">
    <ul>
        <li class="a">您当前的位置：</li>
        <li><a href="/">首页</a> > </li>
        <li>竞彩方案</li>
    </ul>
</div>
<div class="center mt10">
 @{Html.RenderAction("menu", "Member");}
    <div class="new_buy_right">
        @{Html.RenderAction("toptip", "Member");}
        <ul class="mymenu" style="margin-bottom:5px;">
            <li class="myons"><a href="/member/jcplan">发布竞彩推荐</a></li>
            <li><a href="/member/QueryJcRecord">发布竞彩记录</a></li>
        </ul>
    <div id="lotteryWrapper" class="content_left jczq">
        <div class="sub_banner">
            <a id="filter_switch" class="btn1" href="javascript:">赛事筛选</a>
            <p class="dropdown showall">
                <cite>显示全部</cite> <em style="display: none;" id="hide_list"> <b>没有隐藏比赛</b> </em>
            </p>
            <div class="fl">
                [已隐藏<em id="hideNum" class="red">0</em>场比赛]
                <label title="非让球" for="secondul">
                    <input type="checkbox" id="secondul" value="secondul" name="rq" autocomplete="off" checked="checked"/>胜平负
                </label>
                <label title="让球" for="firstul">
                    <input type="checkbox" id="firstul" value="firstul" name="rq" autocomplete="off" checked="checked"/>让球胜平负
                </label>
                <label for="endmatch"><input type="checkbox" id="endmatch" name="5macth" autocomplete="off"/>显示已结束比赛</label>
                (<em id="endNum" class="red">0</em>)场
            </div>
            <div id="filter_layer" class="sub_filter">
                <div id="filterMatch" class="sub_filter_layer sub_filter_box">
                    <h2>赛事名称<a id="filter_close" class="btn2" href="javascript:void 0" style="float: right;margin-right: 3px;">关闭</a></h2>
                    <div id="leagues"></div>
                    <div class="clearfix"></div>
                    <div class="sub_filter_btns">
                        <a id="filter_all" class="btn2" href="javascript:void 0">全选</a>
                        <a id="filter_rever" class="btn2" href="javascript:void 0">反选</a>
                        <a class="btn2" id="filter_clear" href="javascript:void 0">全清</a> 
                    </div>
                </div>
            </div>
        </div>
        <div style="display: none;" id="bet_head" class="bet_head_empty"></div>
        <div class="bet_head">
            <table width="723" height="48" border="0" id="tb_head" class="tb_head">
                <colgroup>
                    <col width="65"/>
                    <col width="86"/>
                    <col width="80"/>
                    <col width="80"/>
                    <col width=""/>
                    <col width="31"/>
                    <col width="60"/>
                    <col width="60"/>
                    <col width="60"/>
                    <col width="60"/>
                </colgroup>
                <thead>
                    <tr>
                        <th class="bet_chc">
                            <p class="pull_ui">
                                <span>场次&nbsp;<s class="arrow"></s></span> <em> <a class="jc-cc" data-type="no" href="javascript: void(0)"><b class="desc"></b>场次</a></em>
                            </p>
                        </th>
                        <th>赛事</th>
                        <th>比赛时间</th>
                        <th>截止时间</th>
                        <th>主队vs 客队</th>
                        <th>让球</th>
                        <th class="bet_sort">
                            <p class="pull_ui">
                                <span>胜<s class="arrow"></s></span><em> <a class="jc-spf" data-type="spf-0" href="javascript: void(0)"><b class="desc"></b>胜平负</a> <a class="jc-rq" data-type="rq-0" href="javascript: void(0)"><b class="desc"></b>让球胜</a> </em>
                            </p></th>
                        <th class="bet_sort">
                            <p class="pull_ui">
                                <span>平<s class="arrow"></s></span> <em> <a class="jc-spf" data-type="spf-1" href="javascript: void(0)"><b class="desc"></b>胜平负</a> <a class="jc-rq" data-type="rq-1" href="javascript: void(0)"><b class="desc"></b>让球胜</a> </em>
                            </p>
                        </th>
                        <th class="bet_sort">
                            <p class="pull_ui">
                                <span>负<s class="arrow"></s></span> <em> <a class="jc-spf" data-type="spf-2" href="javascript: void(0)"><b class="desc"></b>胜平负</a> <a class="jc-rq" data-type="rq-2" href="javascript: void(0)"><b class="desc"></b>让球胜</a> </em>
                            </p>
                        </th>
                        <th class="nrb">分析</th>
                    </tr>
                </thead>
            </table>
        </div>
        <div id="lots" class="bet_content"></div>
        <div class="bet_controller_empty"></div>
        <div id="guoGuanArea" class="bet_controller">
            <div class="gcfc" style="opacity: 1; display: block;">
                <div style="display: none" class="gcfc_none">
                    <div style="display: block;" id="ggIcon" class="icon_tip icon_tip_on"></div>
                    <div style="display: block;" class="gcfc_tips gcfc_top">
                        <label for="gcfc_lab"><input type="checkbox" checked="checked" value="1" id="gcfc_lab" name="gcfc_lab"/>选比赛时自动弹出</label>
                    </div>
                </div>
                <div style="display: block;" id="ggMain" class="gcfc_main">
                    <div id="chuans" class="gcfc_left">
                        <div class="gcfc_left_a">
                            <div style="width:auto" class="ggfs"><span>过关方式：</span>
                                <span id="betNormalPassmode" class="labels">
                                    <span class="noguoguan" id="noguoguan">请选择两场比赛</span>
                                </span>
                                <span style="display: none" class="manyLs" id="guoguanMany">
                                    <div class="layerBg">
                                        <label>
                                            <input type="checkbox" id="guoguanManyInput" value="" autocomplete="off"/>更多过关
                                        </label>
                                    </div>
                                    <div class="layer">
                                        <div class="layer_top"><a id="hideGuoguanManyLayer" href="javascript:void 0">隐藏</a>
                                            <a style="text-decoration: none" name="gg">过关方式对照表</a></div>
                                        <ul id="betMorePassmode" class="others"></ul>
                                    </div>
                                </span>
                            </div>
                            <div class="ggbs">
                                投注倍数： 
                                <input type="text" onmouseover="this.select();" id="multiple" size="4" maxlength="5" onkeyup="Tool.tonumber(this,1,99999);jcpage.dymanic_.changeMutiple();" class="muti_input" value="1" oncontextmenu="return false;" disabled="disabled"/>
                                (默认1倍)
                            </div>
                            <div class="ggbs">方案注数：<b id="scheme_betUnits" class="red">0</b> 注 金额：<b id="scheme_betCost" class="red">0</b> 元
                                奖金范围：<a id="prizeDetail" class="win_more" href="#">
                                         <b id="PrizeForecast1" class="red" value="0">0</b>&nbsp;~&nbsp;
                                         <b id="PrizeForecast2" class="red" value="0">0</b>
                                     </a> 元</div>
                        </div>
                        <div class="tzd_bottom">
                            <table width="240" border="0" class="tzd_tab">
                                <thead>
                                    <tr>
                                        <td width="32" align="center">场次</td>
                                        <td width="66" align="center">主队</td>
                                        <td width="30" align="center">让球</td>
                                        <td width="72" align="center">投注</td>
                                    </tr>
                                </thead>
                                <tbody id="floatBox">
                                </tbody>
                            </table>
                            <div class="gcfc_nocc" id="zero_match" style="display: none;">投注单为空！</div>
                        </div>
                        <div class="gcfc_left_b">
                            <div id="vbtns">
                                <div class="buyBtns">
                                    <input type="button" accesskey="9" title="试试[ALT和9]组合键" value="发起推荐" id="single" class="dialogBtn"/>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="clear"></div>
                    <p class="des">(只可两场赛事，必须有一场单选，每场最多双选，每场让球、不让球选其一)</p>
                </div>
            </div>
            <div id="gcfc_nav" class="gcfc_nav">隐藏投注单</div>
        </div>
    </div>
    </div>
 </div>   
<div class="clearfix"></div>
@UserHelper.js("common.js")
@UserHelper.js("jcplan.js")
@{Html.RenderPartial("box_confirm_gg");}
