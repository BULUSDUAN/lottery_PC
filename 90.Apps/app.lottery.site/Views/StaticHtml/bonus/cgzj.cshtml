@{
    Layout = null;
    var bigbonus = ViewBag.FDList as GameBiz.Core.RankReportCollection_BettingProfit_Sport;
    var game = ViewBag.Game;
}
<div class="tabcon mt10">
    <ul class="ultitle">
        <li class="li-short">排名</li>
        <li class="li_15">发起人</li>
        <li class="li_15">战绩</li>
        <li class="li_15">成功方案个数</li>
        <li class="li_15">中奖总金额(税前)</li>
        <li class="li_15">当前期方案</li>
        <li class="li_15 nobg">自动跟单</li>
    </ul>
    @if (bigbonus != null && bigbonus.TotalCount > 0)
    {
        foreach (var item in bigbonus.RankInfoList)
        {
        <ul class="tabcontent @(bigbonus.RankInfoList.IndexOf(item) % 2 == 0 ? "" : "li_gay")">
            @if (bigbonus.RankInfoList.IndexOf(item) < 3)
            {
                <li class="li-short ico_no_top ico_no_@(bigbonus.RankInfoList.IndexOf(item) + 1)">
                </li>
            }
            else
            {
                <li class="li-short ico_no">@(bigbonus.RankInfoList.IndexOf(item) + 1)</li>
            }
            <li class="li_15"><a href="/blog/standings/@(item.UserId)">@SiteString.HideUserName(item.UserDisplayName, item.UserHideDisplayNameCount)</a></li>
            <li class="li_15">
                @{
                                                            if (item.GoldStarCount > 0)
                                                            {
                    <i class=" zhanji lv@(item.GoldStarCount)"></i>
                                                            }
                                                            if (item.GoldDiamondsCount > 0)
                                                            {
                    <i class=" zhanji lv@(4 + item.GoldDiamondsCount)"></i>
                                                            }
                                                            if (item.GoldCupCount > 0)
                                                            {
                    <i class=" zhanji lv@(8 + item.GoldCupCount)"></i>
                                                            }
                                                            if (item.SilverStarCount > 0)
                                                            {
                    <i class="zhanji hlv@(item.SilverStarCount)"></i>
                                                            }
                                                            if (item.SilverDiamondsCount > 0)
                                                            {
                    <i class="zhanji hlv@(4 + item.SilverDiamondsCount)"></i>
                                                            }
                                                            if (item.SilverCupCount > 0)
                                                            {
                    <i class="zhanji hlv@(8 + item.SilverCupCount)"></i>
                                                            }
                                                            if (item.GoldStarCount <= 0 && item.GoldDiamondsCount <= 0 && item.GoldCupCount <= 0 && item.SilverStarCount <= 0 && item.SilverDiamondsCount <= 0 && item.SilverCupCount <= 0)
                                                            {
                    <i>无</i>
                                                            }
                }
            </li>
            <li class="li_15">@item.TotalOrderCount</li>
            <li class="li_15">@item.BonusMoney.ToString("N2")</li>
            <li class="li_15"><a href="/blog/standings/@(item.UserId)">查看</a></li>
            <li class="li_15"><a href="/blog/custombill/@(item.UserId)" class="btn_dz">定制</a></li>
        </ul>
        }
    }
    else
    { 
        <div class="no_result">
            暂无记录</div>
    }
</div>
