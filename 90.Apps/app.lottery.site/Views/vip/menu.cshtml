    //var leve = 0;
    var needGrowth = 0;
    double width = 0;
    var hb = 0;
    //彩民图标
    var userleve = 1;
    var flag = user != null;
    if (flag)
    {
        var UserGrowth = balance.UserGrowth;
        //成长状态
        if (UserGrowth < 500)
        {
            //leve = 1;
            needGrowth = 500 - UserGrowth;
            width = UserGrowth * 0.192;
        }
        else if (UserGrowth >= 500 && UserGrowth < 1000)
        {
            //leve = 2;
            needGrowth = 1000 - UserGrowth;
            hb = 2;
            width = (UserGrowth - 500) * 0.192;
        }
        else if (UserGrowth >= 1000 && UserGrowth < 2000)
        {
            //leve = 3;
            needGrowth = 2000 - UserGrowth;
            hb = 10;
            width = (UserGrowth - 1000) * 0.096;
        }
        else if (UserGrowth >= 2000 && UserGrowth < 4000)
        {
            //leve = 4;
            needGrowth = 4000 - UserGrowth;
            hb = 20;
            width = (UserGrowth - 2000) * 0.048;
        }
        else if (UserGrowth >= 4000 && UserGrowth < 8000)
        {
            // leve = 5;
            needGrowth = 8000 - UserGrowth;
            hb = 88;
            width = (UserGrowth - 4000) * 0.024;
        }
        else if (UserGrowth >= 8000 && UserGrowth < 12000)
        {
            // leve = 6;
            needGrowth = 12000 - UserGrowth;
            width = (UserGrowth - 8000) * 0.024;
        }
        else if (UserGrowth >= 12000 && UserGrowth < 16000)
        {
            // leve = 7;
            needGrowth = 16000 - UserGrowth;
            width = (UserGrowth - 12000) * 0.024;
        }
        else if (UserGrowth >= 16000 && UserGrowth < 20000)
        {

            //  leve = 8;
            needGrowth = 20000 - UserGrowth;
            width = (UserGrowth - 16000) * 0.024;
        }
        else if (UserGrowth >= 20000)
        {
            //leve = 9;
            width = 96;
        }
        if (user.LoginInfo.MaxLevelName == "彩民")
        {
            userleve = 1;
        }
        else if (user.LoginInfo.MaxLevelName == "百元")
        {
            userleve = 10;
        }
        else if (user.LoginInfo.MaxLevelName == "千元")
        {
            userleve = 2;
        }
        else if (user.LoginInfo.MaxLevelName == "万元")
        {
            userleve = 3;
        }
        else if (user.LoginInfo.MaxLevelName == "十万")
        {
            userleve = 4;
        }
        else if (user.LoginInfo.MaxLevelName == "百万")
        {
            userleve = 5;
        }
        else if (user.LoginInfo.MaxLevelName == "千万" || user.LoginInfo.MaxLevelName == "亿元")
        {
            userleve = 7;
        }
    }
}
