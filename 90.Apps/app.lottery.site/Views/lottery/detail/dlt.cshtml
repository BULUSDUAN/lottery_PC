@using GameBiz.Core;
@{
    var award = ViewBag.Award as LotteryData.Core.GameWinNumber_Info;
    var issues = ViewBag.CurIssuse as Issuse_QueryInfo;
}
@GameHelper.LotteryHeaderView(issues, award, award == null || award.Id == 0 ? "DLT" : award.GameCode)
@GameHelper.LotteryDescView(award == null || award.Id == 0 ? "DLT" : award.GameCode)
