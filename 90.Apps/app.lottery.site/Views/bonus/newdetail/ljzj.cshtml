@{
    var ljzj = ViewBag.FDList as GameBiz.Core.RankReportCollection_TotalBonus_Sport;
    var game = ViewBag.Game;
}
<div class="tabcon mt10">
    <ul class="ultitle">
        <li class="li-short">排名</li>
        <li class="li-18">发起人</li>
        <li class="li-18">累计中奖金额</li>
        <li class="li-18">中奖方案个数</li>
        <li class="li-18">当前期方案</li>
        <li class="li-18 nobg ">自动跟单</li>
    </ul>
    @if (ljzj != null && ljzj.TotalCount > 0)
    {
        foreach (var item in ljzj.RankInfoList)
        {
        <ul class="tabcontent @(ljzj.RankInfoList.IndexOf(item) % 2 == 0 ? "" : "li_gay")">
            @if (ljzj.RankInfoList.IndexOf(item) < 3)
            {
                <li class="li-short ico_no_top ico_no_@(ljzj.RankInfoList.IndexOf(item) + 1)"></li>
            }
            else
            {
                <li class="li-short  ico_no">@(ljzj.RankInfoList.IndexOf(item) + 1)</li>
            }
            <li class="li-18"><a href="/blog/standings/@item.UserId">@SiteString.HideUserName(item.UserDisplayName, item.UserHideDisplayNameCount)</a></li>
            <li class="li-18">@item.BonusMoney.ToString("N2")</li>
            <li class="li-18">@item.TotalOrderCount</li>
            <li class="li-18"><a target="_blank" href="/blog/standings/@item.UserId" >查看</a></li>
            <li class="li-18"><a href="/blog/custombill/@item.UserId" class="btn_dz" >定制</a></li>
        </ul>
        }
    }
    else
    { 
        <div class="no_result">
            暂无记录</div>
    }
</div>
