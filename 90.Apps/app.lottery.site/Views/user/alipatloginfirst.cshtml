@{
    ViewBag.Title = "支付宝登录 - 用户中心 - 体育彩票 | 福利彩票 | 中国体育彩票 - " + SiteString.getHZSiteName(Request);
    ViewBag.keywords = "支付宝登录, 用户中心, 体育彩票, 福利彩票, 中国体育彩票, " + SiteString.getHZSiteName(Request);
    ViewBag.Here = "支付宝登录账号绑定";
    var alipaydic = ViewBag.AlipayDic as SortedDictionary<string, string>;
}
@UserHelper.css("otherlogin.css")
@UserHelper.js("otherlogin.js")
<div class="crumb">
    <ul>
        <li class="a">您当前的位置：</li>
        <li><a href="/">首页</a> > </li>
        <li>绑定已注册的用户名</li>
    </ul>
</div>
<div class="other-lg-tip">
    <span class="other-text">支付宝登录</span>
</div>
<div class="other-lg-box">
    <div class="other-u0">
        <i class="u0-img"></i>
        <div class="u0-text">
            @(SiteString.getHZSiteName(Request))账户基本信息设置</div>
    </div>
    <div class="box-fr">
        @{Html.RenderPartial("loginmenu");}
    </div>
    <div class="box-fl">
        <div id="first">
            <form action="" name="from1" id="from1" method="post">
            <p class="c95">
                绑定已注册的用户名&nbsp;&nbsp;(<em class="cred">*</em>项为必填)</p>
            <br />
            <br />
            <p>
                <span class="span-text"><em class="cred">*&nbsp;</em>购彩用户名：</span><input type="text" id="username" name="LoginName" class="input-text" /></p>
            <br />
            <br />
            <p>
                <span class="span-text"><em class="cred">*&nbsp;</em>登录密码：</span><input type="password" id="password" name="LoginPwd" class="input-text" /></p>
            <br />
            <br />
            <p style="margin-left: 133px; margin-bottom: 16px;">
                <span class="error-box" id="errbox"><i class="err-icon"></i><span class="msg" id="authRealNameERR">
                </span></span>
            </p>
            <p style="margin-left: 133px;"> <a href="javascript:void(0);" class="btn-next-old" id="btn-first-alipay">下一步</a></p>
            @foreach (var item in alipaydic)
            {
                <input name="@item.Key" value="@item.Value" type="hidden" />
            }
            <input type="hidden" value="" id="userId" name="userId" />
            </form>
        </div>
        <div id="Second" class="hide">
            @{
                <form action="/user/alipaybind" name="from2" method="post">
               <div id="mobile-div">
                    <p>
                        <span class="span-text"><em class="cred">*&nbsp;</em>手机号码：</span>
                        <input type="text" class="input-text no-border" name="mobile" id="mobile" value="" disabled="disabled" />
                        <a class="btn-next-old" id="sendcode" href="javascript:void(0)" style="margin-left: 10px;">发送验证码</a>
                    </p>
                    <span class="hide" id="show-tip" style=" color: #999; margin-left: 104px;">您的验证码已发送，请在<em id="djs" style=" font-weight:bold; color:Red;">60</em>秒后重新发送</span>
                    <input type="hidden" id="code" name="Code" />
                    <br />
                    <br />
                    <p>
                        <span class="span-text"><em class="cred">*&nbsp;</em>验证码：</span><input type="text"
                            class="input-text" id="checkCode" /></p>
                    <br />
                    <br />
               </div>
               <div id="idCard-div" class="hide">
                    <p>
                        <span class="span-text"><em class="cred">*&nbsp;</em>身份证号码：</span>
                        <input type="text" class="input-text no-border" name="idCard" id="idCard" value="" disabled="disabled" /></p>
                        <input type="hidden"  id="IdCardNum" />
                    <br />
                    <br />
                    <p>
                        <span class="span-text"><em class="cred">*&nbsp;</em>确认身份证：</span>
                        <input type="text" class="input-text" name="CheckidCard" id="CheckidCard" /></p>
                    <br />
                    <br />
              </div>
                <p style="text-align: center; margin-bottom: 16px;">
                    <span class="error-box" id="errbox-2"><i class="err-icon"></i><span class="msg" id="authRealNameERR-2">
                    </span></span>
                </p>
                <p style="text-align: center;">
                    <a href="javascript:void(0)" class="btn-next-old" id="next-band">下一步</a></p>
                @foreach (var item in alipaydic)
                {
                    <input name="@item.Key" value="@item.Value" type="hidden" />
                }
                    <input type="hidden" value="" id="userId" name="userId" />
                    <input type="hidden" value="" id="LoginName" name="alipayLoginName" />
                    <input type="hidden" value="" id="LoginPwd" name="LoginPwd" />
                </form>
   
            }
        </div>
    </div>
</div>
