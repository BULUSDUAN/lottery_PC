</html>
<script type="text/javascript">
    $("#phoneNoMobile").focus(function () {
        $("#phoneNoMobile").val("");
    });
    $("#phoneNoMobile").blur(function () {
        var phoneNoMobile = $("#phoneNoMobile").val();
        if (phoneNoMobile == null || phoneNoMobile == "") {
            $("#phoneNoMobile").val("输入手机号码，免费获得下载地址");
        }
    });
    $("#phoneClient_Website").click(function () {
        $(this).parents("form").ajaxSubmit({
            type: 'post',
            url: "/home/SendExtensionMsg?r=" + Math.random(),
            success: function (callback) {
                $("#phoneClient_Website").val("发送");
                alertTip(callback.Msg)
            },
            error: function (XmlHttpRequest, textStatus, errorThrown) {
                $("#phoneClient_Website").val("发送");
            }
        });
    });

    $('body').click(function (e) {
        var cell = $(e.target);
        if (cell) {
            var tgID = $(cell).attr('id') == '' ? "string" : $(cell).attr('id');
            var isTagert = false;
            try {
                isTagert = tgID != 'phoneclient';
            }
            catch (e) {
                isTagert = true;
            }
            if (isTagert) {
                $('.header_right .pulldown').addClass("hide");
            }
        }
    });

    //下载客户端
    $("#btnapp").click(function () {
        var select = $(".popup_box").find(".select");
        if (select.attr("mark") == "Android") window.location.href = "@apkurl";
        if (select.attr("mark") == "iPhone") window.location.href = "@iosUrl";
    });
    //下载到电脑
    $("#btncomputer").click(function () {
        var select = $(".popup_box").find(".select");
        if (select.attr("mark") == "Android") window.location.href = "@apkurl";
        if (select.attr("mark") == "iPhone") window.location.href = "@iosUrl";
    });

    //立即下载
    $("#btndown").click(function () {
        $(".popup_box").find("li").removeClass("select");
        $(".popup_box").find("li").eq(0).addClass("select");
        $(".popup_box").removeClass("hide");
    });
    //头部下拉  选择下载类型
    $(".pulldown li").click(function () {
        if ($(this).find("a").text() != 'WinPhone') {
            var index = $(this).index();
            $(".popup_box").find("li").removeClass("select");
            $(".popup_box").find("li").eq(index).addClass("select");
            if ($(this).attr("mark") == "Android") $("#btnapp").attr("class", "btngoglePlay");
            else $("#btnapp").attr("class", "app");
            $(".popup_box").removeClass("hide");
        } else alertTip("敬请期待");
    });

    //弹出框  点击不同的系统
    $(".popup_box .type [mark]").click(function () {
        $(this).siblings().removeClass("select");
        $(this).addClass("select");
        if ($(this).attr("mark") == "Android") $("#btnapp").attr("class", "btngoglePlay");
        else $("#btnapp").attr("class", "app");
    });

    //取消  弹出框
    $(".popup_box .cancel").click(function () {
        $(".popup_box").addClass("hide");
    });

    //下拉列表  显示
    $(".phone_client").click(function () {
        if ($(".pulldown").is(":visible")) {
            $(".pulldown").addClass("hide");
        } else {
            $(".pulldown").removeClass("hide");
        }
    });

    //触屏 客户端 切换
    $("#phoneclient").click(function () {
        $(".phone_client").addClass("cur");
        $(".phone_client i").addClass("icon");
        $(".phone_touch").removeClass("cur");
        $("#phone_client").removeClass("hide");
        $("#phone_touch").addClass("hide");
        $(".phone_font").css("background-color", "#7bc854");
    });
    $("#phonetouch").click(function () {
        $(".phone_client").removeClass("cur");
        $(".phone_client i").removeClass("icon");
        $(".phone_touch").addClass("cur");
        $("#phone_touch").removeClass("hide");
        $("#phone_client").addClass("hide");
        $(".phone_font").css("background-color", "#d53827");
    });
</script>
<script type="text/javascript">
    jQuery(".slideBox").slide({ mainCell: ".bd ul", effect: "fold", autoPlay: true, trigger: "click" });
</script>
